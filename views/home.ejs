<%- include("partials/head.ejs") %>
<body>
  
  <%- include("partials/navbar.ejs") %>
    <div class="container">
      <h1 class="mb-3 askHomePage">Perguntas</h1>
      <a href="/ask" class="askColor btnAsk mb-5">Perguntar</a>
      <% asks.forEach(ask => { %>
        <div class="card cardStyle mb-3">
          <div class="card-body cardHeaderStyle">
            <h3 class="aksTitle"><%- ask.title %></h3>
          </div>
          <div class="card-footer">
            <a href="/ask/<%= ask.id %>"><button class="btnAsk">Responder</button></a>
          </div>
        </div>
      <% }) %>
    </div>
</body>
<%- include("partials/footer.ejs") %>